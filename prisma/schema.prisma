model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  posts      Post[]
  created_at DateTime @default(now())
}

model Post {
  id      Int    @id @default(autoincrement())
  content String
  userId  Int
  author  User   @relation(fields: [userId], references: [id])
}
